                    text:'   Non Repeating Stage'
                    bold: True if slider0.value==1 else False
                    font_size: dp(15)

############ Keno anamesa sto switch kai ta inputs ###########################
            BoxLayout:
                size_hint_y: 0.01
                canvas:
                    Color:
                        rgba:0.6862,0.9333,0.9333,0.737
                    Rectangle:
                        pos: self.pos
                        size: self.size


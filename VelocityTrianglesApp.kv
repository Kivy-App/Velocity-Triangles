WindowManager:
    VelocityTriangles:
    NewWindow:


<Label>:
    font_size: "17sp"
    size_hint_x:1
    color: [0,0,0,1]


<TextInput>
    size_hint: 1,0.6
    spacing: 5

<ToggleButton>
    size_hint: 0.5,1


<VelocityTriangles>:
    name: "Main"
    p:p

    GridLayout:
        rows:2
        size: root.width,root.height

        ######  App Title
        BoxLayout:
            size_hint_y:0.08
            canvas:
                Color:
                    rgba: 0.066,0.392,0.505,0.768
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: "One Stage Velocity Analysis "
                bold: True
                font_size: "20sp"

        ###### Overall Grid after title
        GridLayout:
            rows: 3
            size_hint_y:0.92


            BoxLayout:
                padding: 10
                size_hint_y: 0.1
                canvas:
                    Color:

                        rgba: 0.333,0.596,0.635,0.9
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    font_size: "18sp"
                    text:"Repeating Stage"
                    color: [0,0,0,1]
                ToggleButton:
                    text: ""
                    id: mike
                    group: "a"
                    on_press: root.some()
                ToggleButton:
                    text: ""
                    id: faulty
                    group: "a"
                    on_press:
                Label:
                    font_size: "18sp"
                    text:"Non Repeating Stage"


            GridLayout:
                size_hint_y: 0.4
                cols: 3
                canvas:
                    Color:
                        rgba: 0.6862,0.9333,0.9333,0.737

                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text:"Loading Coefficient \u03C8 : "
                    text_size: self.size
                    halign: 'right'
                    valign: 'middle'
                TextInput:
                    id: p
                    multiline: False
                Label:
                    text: "  ---------"
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'

                Label:
                    text:"Flow Coefficient \u03C6 : "
                    text_size: self.size
                    halign: 'right'
                    valign: 'middle'
                TextInput:
                    id: f
                    multiline: False
                Label:
                    text: "  ---------"
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'

                Label:
                    text:"Reaction Coefficient Rn : "
                    text_size: self.size
                    halign: 'right'
                    valign: 'middle'
                TextInput:
                    multiline: False
                    id: Rn
                Label:
                    text: "  ---------"
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'

                Label:
                    text:"Inlet absolute angle \u03B11 : "
                    text_size: self.size
                    halign: 'right'
                    valign: 'middle'
                TextInput:
                    multiline: False
                    id: a1
                Label:
                    text: "  ---------"
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'

                Label:
                    text:"Outlet absolute angle \u03B12 : "
                    text_size: self.size
                    halign: 'right'
                    valign: 'middle'
                TextInput:
                    multiline: False
                    id: a2
                Label:
                    text: "  ---------"
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'

                Label:
                    text:"Inlet absolute angle \u03B13 : "
                    text_size: self.size
                    halign: 'right'
                    valign: 'middle'
                TextInput:
                    multiline: False
                    id: a3
                Label:
                    text: "  ---------"
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'

                Label:
                    text:"Inlet relative angle \u03B21 : "
                    text_size: self.size
                    halign: 'right'
                    valign: 'middle'
                TextInput:
                    multiline: False
                    id: b1
                Label:
                    text: "  ---------"
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'

                Label:
                    text:"Outlet relative angle \u03B22 : "
                    text_size: self.size
                    halign: 'right'
                    valign: 'middle'
                TextInput:
                    multiline: False
                    id: b2
                Label:
                    text: "  ---------"
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'

                Label:
                    text:"Inlet relative angle \u03B23 : "
                    text_size: self.size
                    halign: 'right'
                    valign: 'middle'
                TextInput:
                    multiline: False
                    id: b3
                Label:
                    text: "  ---------"
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'



            #Deytero Grid
            GridLayout:
                size_hint_y: 0.5
                rows:3
                #Proto Box
                BoxLayout:
                    size_hint_y: 0.1
                    padding:5
                    canvas:
                        Color:                        
                            rgba: 0.6862,0.9333,0.9333,0.737
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        size_hint_x:0.325
                        text: ""
                    Button:
                        size_hint_x:0.33
                        text: "Velocity Analysis"
                        color: [1,1,1,1]
                        on_release:
                            app.root.current = "new"
                            root.manager.transition.direction = "left"
                            root.some()

                    Label:
                        size_hint_x:0.325
                        text: ""

                BoxLayout:
                    size_hint_y: 0.2
                    padding: 14
                    canvas:
                        Color:
                            rgba: 0.333,0.596,0.635,0.9
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Label:
                        font_size: "18sp"
                        text:"Parallel Annulus"
                    ToggleButton:
                        text: " "
                        id: dion
                        group: "b"
                        on_press:
                    ToggleButton:
                        text: " "
                        id: faulty
                        group: "b"
                        on_press:
                    Label:
                        font_size: "18sp"
                        text:"Non Parallel Annulus"

                BoxLayout:
                    size_hint_y: 0.6
                    canvas:
                        Color:
                            #rgba: 0.6,0.8,0.6,0.6
                            rgba: 0.6862,0.9333,0.9333,0.737
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        font_size: "18sp"



<NewWindow>:
    name: "new"

    GridLayout:
        rows: 2
        BoxLayout:
            size_hint_y:0.9
            canvas:
                Color:
                    rgba: 0.6862,0.9333,0.9333,0.737
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                size_hint: 0.1,0.1
                on_release: root.some1()

        GridLayout:
            cols:2
            size_hint_y:0.1
            canvas:
                Color:
                    #rgba: 0.6,0.8,0.6,0.6
                    rgba: 0.6862,0.9333,0.9333,0.737
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                padding: 15
                spacing: 20
                size_hint_x: 0.3
                Button:
                    text:"Back"
                    on_release:
                        app.root.current = "Main"
                        root.manager.transition.direction = "right"


            BoxLayout:
                size_hint_x:0.7

<InfoScreen>:
    name:"info"
    BoxLayout:
        orientation:"vertical"
        GridLayout:
            cols:2
            size_hint_y: 0.08
            BoxLayout:
                size_hint_x:0.15
                MDIconButton:
                    id:info_button
                    pos:self.parent.pos
                    size:self.parent.size
                    user_font_size:dp(30)
                    icon:'menu'
                    on_release: root.nav_drawer.set_state('open')

            BoxLayout:
                size_hint_x: 0.85
                canvas:
                    Color:
                        rgba:0,0,0,0
                    Rectangle:
                        pos: self.pos
                        size: self.size
                    Color:
                        rgba: 1,1,1,1
                    Line:
                        width: dp(1)
                        points: [self.x,self.y+dp(10),self.x,self.y+self.height-dp(10)]
                Label:
                    text: '  VTA-APP'
                    color: [1,1,1,1]
                    font_name: 'BlackHanSans-Regular.ttf'
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                    font_size: dp(30)
        BoxLayout:
            size_hint_y:0.92
            Label:
                text: 'info'


